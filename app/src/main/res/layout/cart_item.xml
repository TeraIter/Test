<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageCartProduct_iv"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleCartProduct_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="iPhone 9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageCartProduct_iv"
            app:layout_constraintTop_toTopOf="@+id/imageCartProduct_iv" />

        <TextView
            android:id="@+id/quantityCartProduct_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="3"
            app:layout_constraintBottom_toBottomOf="@+id/quantity_tv"
            app:layout_constraintStart_toEndOf="@+id/quantity_tv"
            app:layout_constraintTop_toTopOf="@+id/quantity_tv" />

        <TextView
            android:id="@+id/priceCartProduct_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="600"
            app:layout_constraintBottom_toBottomOf="@+id/price_tv"
            app:layout_constraintStart_toEndOf="@+id/price_tv"
            app:layout_constraintTop_toTopOf="@+id/price_tv" />

        <TextView
            android:id="@+id/totalCartProduct_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1800"
            app:layout_constraintBottom_toBottomOf="@+id/total_tv"
            app:layout_constraintStart_toEndOf="@+id/total_tv"
            app:layout_constraintTop_toTopOf="@+id/total_tv" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price:"
            app:layout_constraintStart_toStartOf="@+id/titleCartProduct_tv"
            app:layout_constraintTop_toBottomOf="@+id/titleCartProduct_tv" />

        <TextView
            android:id="@+id/quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quantity:"
            app:layout_constraintStart_toStartOf="@+id/price_tv"
            app:layout_constraintTop_toBottomOf="@+id/price_tv" />

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total:"
            app:layout_constraintStart_toStartOf="@+id/quantity_tv"
            app:layout_constraintTop_toBottomOf="@+id/quantity_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>